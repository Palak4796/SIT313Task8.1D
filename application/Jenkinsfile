pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Palak4796/SIT313Task8.1D.git' // Replace with your repo URL
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    bat 'npm install' // Installs project dependencies using Windows batch
                }
            }
        }

        stage('Build React App') {
            steps {
                script {
                    bat 'npm run build' // Generates production-ready build using Windows batch
                }
            }
        }
    }

    post {
        success {
            echo "Build completed successfully!"
        }
        failure {
            echo "Build failed!"
        }
    }
}
