pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Palak4796/SIT313Task8.1D.git' // Replace with your repo URL
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    try {
                        bat 'npm install' // Installs project dependencies
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }

        stage('Build React App') {
            steps {
                script {
                    try {
                        bat 'npm run build' // Generates production-ready build
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Build completed successfully!"
        }
        failure {
            echo "Build failed! Please check the logs."
        }
        always {
            cleanWs() // Cleans up the workspace after the build process
        }
    }
}
